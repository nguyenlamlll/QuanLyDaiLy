<Window x:Class="QuanLyDaiLy_Source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLy_Source"
        mc:Ignorable="d"
        Title="Quản Lý Đại Lý" Height="350" Width="525">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--For status/tool bar-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.035*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" 
                              MaxWidth="240" MinWidth="140"/>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="Rectangle_NavigationFill_1"
                   Fill="Gray"
                   Grid.RowSpan="3"

                   />


        <DockPanel x:Name="DockPanel_Icon" Grid.Column="0" Grid.Row="0">
            <Rectangle Fill="Black" 
                       Width="50" Height="50"
                       Margin="0,10,0,0"/>

        </DockPanel>
        <!-- Navigation Menu-->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <!-- Button 1: Homepage-->

            <StackPanel Orientation="Horizontal" 
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                <Button x:Name="ButtonHome" 
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="15"
                        Content="&#xE10F;"
                        Height="25" Width="25"
                        Click="ButtonHome_Click"
                        />


                <TextBlock x:Name="TextBlock_HomePage" 
                           FontSize="20"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap" MouseDown="TextBlock_HomePage_MouseDown">
                    Trang Chủ
                </TextBlock>

            </StackPanel>

            <!-- Button 2: Danh sach Dai Ly. Navigate to DanhSachDaiLy page-->

            <StackPanel Orientation="Horizontal">
                <Button x:Name="ButtonList" 
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="15"
                        Content="&#xE14C;"
                        Height="25" Width="25"
                        />
                <Viewbox>
                    <TextBlock FontSize="30" 
                           VerticalAlignment="Center"> 
                    Danh Sách
                    </TextBlock>
                </Viewbox>
            </StackPanel>



            <StackPanel Orientation="Horizontal">
                <Button x:Name="ButtonAddEdit" 
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="15"
                        Content="&#xE15E;"
                        Height="25" Width="25"
                        />
                <Viewbox>
                    <TextBlock FontSize="15" 
                           VerticalAlignment="Center"> 
                    Chỉnh sửa
                    </TextBlock>
                </Viewbox>
            </StackPanel>



            <StackPanel Orientation="Horizontal">

                <Button x:Name="ButtonReports" 
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="15"
                        Content="&#xE82D;"
                        Height="25" Width="25"
                        />

                <Viewbox>
                    <TextBlock FontSize="15" 
                           VerticalAlignment="Center"> 
                    Báo Cáo
                    </TextBlock>
                </Viewbox>
            </StackPanel>



            <Border x:Name="Border_NavigationMenuBorder" 
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,5,0,0"/>

        </StackPanel>

        <Frame x:Name="ContentFrame"
               Grid.Column="1"
               Grid.Row="1">
        </Frame>

        <Rectangle Fill="Gray" 
                   Grid.Column="3"
                   Grid.RowSpan="3"/>
        <Rectangle Fill="Aqua"
                   Grid.Row="3"
                   Grid.ColumnSpan="3"/>

        <Grid x:Name="Grid_AdvancedList" 
              Grid.Column="1" 
              Grid.Row="0" Grid.RowSpan="3"
              HorizontalAlignment="Left" Background="Goldenrod"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Grid.Row="0"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="15"
                    Content="&#xE14C;"
                    Height="25" Width="25"
                    HorizontalAlignment="Left">
            </Button>
            <Viewbox Grid.Row="0" 
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left">
                <TextBlock> 
                    Tìm kiếm &#160;
                </TextBlock>
            </Viewbox>

            <Button Grid.Column="0"
                    Grid.Row="1"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="15"
                    Content="&#xE14C;"
                    Height="25" Width="25"
                    HorizontalAlignment="Left">
            </Button>
            <Viewbox Grid.Row="1" 
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left">
                <TextBlock> 
                    Xem &#160;
                </TextBlock>
            </Viewbox>
            



        </Grid>
    </Grid>
</Window>
